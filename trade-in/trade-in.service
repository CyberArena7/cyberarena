[Unit]
After=network.target

[Service]
User=purchase-order
Group=purchase-order
WorkingDirectory=/opt/trade-in
ExecStart=/usr/bin/gunicorn -b 127.0.0.1:3003 main:app
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
Restart=on-failure
RestartSec=2

[Install]
WantedBy=multi-user.target
